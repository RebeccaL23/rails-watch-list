<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/random/?movies);">
  <div class="container">
    <h1>Movie Lists</h1>
    <br>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Add new list
    </button>
  </div>
</div>

<ul class='list'>
  <%@lists.each do |list| %>
    <div class="card-product">
      <%# <img src="https://source.unsplash.com/random/?movies" /> %>
      <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
      <div class='card-product-infos'>
          <h2><%= list.name %></h2>
          <%= link_to "View list", list_path(list) %>
      </div>
    </div>
  <% end %>
</ul>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a new list</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "form", list: @list %>
      </div>
      <%# <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div> %>
    </div>
  </div>
</div>
