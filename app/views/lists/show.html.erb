<div class="list-hero">
  <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
  <h1 id='show-h1'><%= @list.name %></h1> <br>
  <%= link_to "Add bookmark", new_list_bookmark_path(@list) %>
</div>
<br><br>
<ul class='list'>
  <%@list.movies.each do |movie| %>
    <div class="card-product">
      <img src="https://source.unsplash.com/random/?movies" />
      <div class='card-product-infos'>
          <%= link_to movie.title, movie_path(movie) %>
      </div>
    </div>
  <% end %>
</ul>
